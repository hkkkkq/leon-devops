<p>&nbsp;</p>
<div class="container">
    <form>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">舊密碼</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword" placeholder="舊密碼" name="password">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputPassword1" class="col-sm-2 col-form-label">新密碼</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword1" placeholder="確認密碼" name="password1">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputPassword2" class="col-sm-2 col-form-label">確認密碼</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword2" placeholder="確認密碼" name="password2">
            </div>
        </div>

    </form>
    <div id="divSubmit">
        <button class="btn btn-primary" id="btnSubmit" onclick="clickSubmit()">提交</button>
    </div>

    <div id="divSubmitMessage" class="alert alert-success" role="alert">
        <strong>更改成功</strong>
    </div>
</div>





<div id="myModal" class="modal fade">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <p id="modalMessage">Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


{{#extend "scripts"}}
<script src="/javascripts/password.js"></script> {{/extend}}